extends ../layout/index
block contenido
     main.container.mt-5
          h1.text-center.mb-5 #{pagina}
          .row
               .col-md-12
                   include ../layout/partials/testimoniales
                    
               .col-md-12
                    h2.text-center Agrega un Testimonial
                    if(errores)
                         each error in errores
                              .alert.alert-danger.text-center=error.mensaje

                    .row.justify-content-center
                         .col-md-8
                              form(action="/testimoniales", method="POST")
                                   .form-froup
                                        label(for="nombre") Nombre
                                        input(id="nombre" type="text", class="form-control", placeholder="Tu Nombre", name="nombre", value=nombre, required)
                                   .form-froup.mt-4
                                        label(for="correo") Correo Electrónico
                                        input(id="correo" type="email", class="form-control", placeholder="Tu Correo Electrónico", name="correo", value=correo, required)
                                   .form-froup.mt-4
                                        label(for="mensaje") Mensaje
                                        textarea#mensaje(name="mensaje", rows="3", placeholder="Tu mensaje", class="form-control", required)=mensaje
                                        input.btn.btn-success.btn-block.mt-4(type="submit" value="agregar")